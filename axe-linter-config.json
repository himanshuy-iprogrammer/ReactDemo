{
    "global-libraries": [
        "react"
    ],
    "include": [
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "rules": {
        "min-font-size": "error",
        "button-has-name": "error",
        "link-has-name": "error",
        "interactive-supports-focus": "error",
        "no-autofocus": "warn",
        "form-field-has-label": "error",
        "label-has-associated-control": "error",
        "image-has-accessibility-label": "error",
        "media-has-caption": "warn",
        "aria-allowed-attr": "error",
        "has-accessibility-role": "error",
        "has-valid-accessibility-actions": "error",
        "has-valid-accessibility-state": "error",
        "has-valid-accessibility-value": "error",
        "aria-unsupported-elements": "error",
        "aria-props": "error",
        "aria-proptypes": "error",
        "role-supports-aria-props": "error",
        "region-role-required": "error",
        "landmark-unique": "warn",
        "heading-order": "error",
        "document-title": "warn",
        "color-contrast": "error",
        "focus-trap": "warn",
        "scrollable-region-focusable": "warn",
        "duplicate-id": "error",
        "html-has-lang": "error",
        "label-content": "error"
    },
    "custom-rules": "./axe-custom-rules.js"
}